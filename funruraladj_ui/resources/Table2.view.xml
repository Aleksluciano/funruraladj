<mvc:View xmlns:core="sap.ui.core" controllerName="funruraladj_ui.Table2" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout">
	<Page title="CÃ³digo e tipo de imposto" titleLevel="H1" showHeader="true" showNavButton="true" navButtonPress=".onNavBack"
		class="sapUiResponsiveContentPadding">
		<content>
			<Button type="Emphasized" text="+ Adicionar" press="add"/>
			<l:VerticalLayout class="sapUiContentPadding" width="100%">
				<l:dependents>
					<core:Fragment fragmentName="funruraladj_ui.AddDialog2" type="XML"/>
				</l:dependents>
			</l:VerticalLayout>
			<l:VerticalLayout class="sapUiContentPadding" width="100%">
				<l:dependents>
					<core:Fragment fragmentName="funruraladj_ui.EditDialog2" type="XML"/>
				</l:dependents>
			</l:VerticalLayout>
			<Table items="{ path: '/CODTIPO'}" id="tableCodtipo">
				<columns >
					<Column >
						<Text text="ITEM_INCENTIVO"/>
					</Column>
					<Column >
						<Text text="CODIGO_IRF"/>
					</Column>
					<Column >
						<Text text="CAT_IMPOSTO"/>
					</Column>
					<Column >
						<Text text="DT_INI"/>
					</Column>
					<Column >
						<Text text="DT_FIN"/>
					</Column>
					<Column >
						<Text text="Editar"/>
					</Column>
					<Column >
						<Text text="Remover"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem >
						<cells>
							<Text text="{ITEM_INCENTIVO}"/>
						</cells>
						<cells>
							<Text text="{CODIGO_IRF}"/>
						</cells>
							<cells>
							<Text text="{CAT_IMPOSTO}"/>
						</cells>
						<cells>
							<Text text="{DT_INI}"/>
						</cells>
						<cells>
							<Text text="{DT_FIN}"/>
						</cells>
						<cells>
							<Button id="modifyButton" icon="sap-icon://edit" press=".onEdit">
								<customData>
									<core:CustomData key="multi" value="{Id}"/>
								</customData>
							</Button>
						</cells>
						<cells>
							<Button id="deleteButton" icon="sap-icon://delete" press=".onDelete">
								<customData>
									<core:CustomData key="multi" value="{Id}"/>
								</customData>
							</Button>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
		<footer>
			<OverflowToolbar></OverflowToolbar>
		</footer>
	</Page>
</mvc:View>